 {% extends  "base.html.twig" %}

{% block body %}

<a class="btn btn-primary mt-2" href="{{ path('voiture_new') }}">Ajouter une voiture</a>

<table class="table">
	<thead>
		<tr>
            <th>Marque</th>
            <th>Modéle</th>
            <th>Déscription</th>
            <th>Prix</th>
            <th>Type</th>
            <th>Editer</th>
            <th>Supprimer</th>

        </tr>
	</thead>
    <tbody>
    {% for voiture in voitures %}
        <tr>
            <td>{{ voiture.marque}}</td>
            <td>{{ voiture.modele}}</td>
            <td>{{ voiture.description}}</td>
            <td>{{ voiture.prix}}</td>
            <td>{{ voiture.type.titre}}</td>
            <td>
            <a class="btn btn-primary mt-2" href="{{ path('voiture_edit', {id: voiture.id}) }}">Ajouter</a>
            </td>
            <td>
                 <a onclick="return confirm('voulez-vous supprimer cet article?')" class="btn btn-danger mt-2" href="{{ path('voiture_delete', {id: voiture.id}) }}">Supprimer</a>
            </td>
        
        </tr>
        
    {% endfor %}
    </tbody>
</table>

{% endblock %}
